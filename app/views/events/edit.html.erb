<br>
<%if @event_update.errors.any? %>
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
    	<p><strong>Hola muchachos !</strong>  Nous n'avons pas réussi à créer l'eévénement pour la (ou les) raison(s) suivante(s) :</p>
    	<% @event_update.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>

    	<button type="button" class="close" data-dismiss="alert" aria-label="Close">
    		<span aria-hidden="true">&times;</span>
    	</button>
    </div>
    
    <%end%>

  <body>
    <!-- ... -->

    <div class="container">

      <%=form_tag url_for(action: 'update'), method: "put" do %>

      <div class="form-group">
       <%= label_tag 'Start Date' %>
        <br>
        <%= date_field_tag 'start_date', @event_update.start_date %>
       
      </div>

      <div class="form-group">
       <%= label_tag 'Duration' %>
        <br>
        <%= number_field_tag 'duration', @event_update.duration %>
        
      </div>

      <div class="form-group">
       <%= label_tag 'Title' %>
        <br>
        <%= text_field_tag 'title', @event_update.title %>
        
      </div>
      <div class="form-group">

        <%= label_tag 'Description' %>
        <br>
        <%= text_field_tag 'description', @event_update.description %>
        
      </div>

       <div class="form-group">
       <%= label_tag 'Price' %>
        <br>
        <%= number_field_tag 'price', @event_update.price %>
     
      </div>
      <div class="form-group">

        <%= label_tag 'Location' %>
        <br>
        <%= text_field_tag 'location', @event_update.location %>
     
      </div>

      <div class="form-group">

        <%= submit_tag "Edit Event" %>
      </div>
      <% end %>
    </div>